{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/dist/*",
      "!**/build/*",
      "!types/*",
      "!**/node_modules/*",
      "!.vscode/*"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 80,
    "useEditorconfig": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "warn",
        "noUnusedImports": "warn"
      },
      "style": {
        "useBlockStatements": "error",
        "noNamespace": "error",
        "noNonNullAssertion": "warn"
      },
      "suspicious": {
        "noEmptyBlockStatements": "error",
        "noExplicitAny": "warn"
      }
    }
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "trailingCommas": "es5",
      "quoteStyle": "single"
    }
  }
}
